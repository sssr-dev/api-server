{

  "name": "SSSR-dev api",
  "version": "0.1.0",

  "flask_settings": {
    "host": "0.0.0.0",
    "port": "11491",
    "debug": true
  },

  "endpoints_info": {

    "cc": {
      "name": "Link shortening",
      "endpoint": "/cc",
      "version": "1.0",
      "need_auth": false,
      "methods": ["GET"],
      "db_config": {
        "type": "SQLite",
        "path": "./sqlite3.db",
        "table": "links"
      }
    },

    "git_counter": {
      "name": "Github profile counter",
      "endpoint": "/gc",
      "version": "non",
      "need_auth": false,
      "methods": ["GET"],
      "db_config": {
        "type": "SQLite",
        "path": "./sqlite3.db",
        "table": "github_counter"
      }
    }
  }
}